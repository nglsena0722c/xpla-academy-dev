{
    "compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./build",
		"esModuleInterop": true,
		"sourceMap": true,
		"target": "es2015",      
		"baseUrl": ".",
		"downlevelIteration": true,
		"noImplicitAny": false,
		"resolveJsonModule": true,	   
		"paths": { "*": ["node_modules/*"] },
    },   
	"include": ["routes/**/*"]
}
  
  